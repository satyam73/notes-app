<!doctype html>
<html lang="en">

<head>
  {{>header}}
  <style>
    #myProfileContainer {
      box-shadow: 1px 1px 28px 0px #88888840;
      height: fit-content;
      padding-bottom: 5rem !important;
    }

    #profileImgContainer {
      align-items: center;
      justify-content: center;
    }

    #profileInfo {
      align-items: center;
      justify-content: center;
    }

    #profileInfo .list-group {
      width: 100%;
    }

    #profileImg {
      height: 100%;
      width: 50%;
    }

    #gender {
      text-transform: capitalize;
    }
  </style>
</head>

<body>
  {{>navbar}}
  <div class="container container-fluid">
    <div class="row justify-content-center align-items-center m-5 p-5" id="myProfileContainer">
      <h1 style="text-align: center; margin-bottom: 4rem !important" class="m-4 fw-bold">Your Details!</h1>
      <div class="d-flex col-md-4 col-12" id="profileImgContainer">
        <img src="/images/profile.svg" alt="" id="profileImg">
      </div>
      <div class="d-flex col-md-6 col-12 fs-2" id="profileInfo">
        <ul class="list-group">
          <li class="list-group-item" id="firstName"><strong>First Name : </strong>An item</li>
          <li class="list-group-item" id="lastName"><strong>Last Name : </strong>A second item</li>
          <li class="list-group-item" id="email"><strong>Email : </strong>A third item</li>
          <li class="list-group-item" id="gender"><strong>Gender : </strong>A third item</li>
          <li class="list-group-item" id="password"><strong>Password : </strong>*************</li>
        </ul>

      </div>
    </div>
  </div>

  {{!-- Bootstrap script --}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
  <script type="text/javascript" src="/js/myprofile.js"></script>
</body>

</html>