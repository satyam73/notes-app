<!doctype html>
<html lang="en">

<head>
    {{>header}}
    <link rel="stylesheet" type="text/css" href="/css/edit.css">
</head>

<body>
    {{>navbar}}
    <div class="container my-3" id="editPageMainContainer">
    <div id="editPop" class="m-5"></div>
        <h1 id="editPageMainHeading" class="my-5">Welcome to the notes app {{username}}</h1>
        <div class="card" id="editNotesInputContainer">
            <form action="" method="">
                <div class="card-body">
                    <div class="form-group" style="padding-left:1rem;">
                        <h5 class="card-title addTitleHeading">Add title</h5>
                        <input id="updatedTitle" type="text" class="form-control title" aria-describedby="title"
                            name="title" placeholder="Enter title" value="{{title}}">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title addNoteHeading">Add Note</h5>
                        <div class="form-group">
                            <textarea class="form-control note" id="updatedNote" rows="6" name="note"
                                placeholder="Add Your Note HereðŸ“âœ">{{text}}</textarea>
                        </div>
                        <button class="btn btn-primary my-3  button" id="saveNoteBtn">Save Note</button>
                        <a href="/notes" class="btn btn-primary my-3  button">Go to Your Notes</a>
                    </div>
            </form>
        </div>
    </div>

    {{!-- Bootstrap script --}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="/js/edit.js" type="text/javascript"></script>
</body>

</html>